<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DialogBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bg_actionbar</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_dialog_btn</item>
        <item name="android:padding">10dip</item>
    </style>


    <style name="btnStyleLogin" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_dark</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="btnSmall" parent="@android:style/Widget.Button.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/bg_btn_small</item>
    </style>

    <style name="btnSmallLuckDraw" parent="@android:style/Widget.Button.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/bg_btn_small_luckdraw</item>
    </style>

    <style name="btnStyle2" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_btn_dark</item>
        <item name="android:padding">3dip</item>
    </style>

    <style name="editText">

    </style>

    <style name="editText.number">
        <item name="android:ems">5</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="editText.Round">
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="listViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:id">@android:id/list</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="textViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textViewStyle1" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#006ec8</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textViewAppreance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RedTextAppreance" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>

    </style>

    <style name="title" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="title.subTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title.item">
        <item name="android:textSize">18sp</item>
    </style>
</resources>